@model Shop.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="login-form">
    <p class="login-heading">Регистрация</p>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="login-form-group">
                <input class="login-input" type="text" asp-for="Email" placeholder="E-mail"  required />
                <span asp-validation-for="Email" />
            </div>
            <div class="login-form-group">
                <input class="login-input" asp-for="Password" placeholder="Пароль" required />
                <span asp-validation-for="Password" />
            </div>
            <div class="login-form-group">
                <input class="login-input" asp-for="ConfirmPassword" placeholder="Повторите пароль" required />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div class="login-form-group">
                <input class="login-btn" type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</div>
